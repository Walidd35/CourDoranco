{% extends 'base.html.twig' %}

{% block title %}Admin Categories
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href={{asset('')}}>
{% endblock %}

{% block body %}
	<main class="d-flex flex-column gap-5">
		<h1>Manage Categories</h1>
			<a class="btn btn-success m-auto" href={{path('admin_category_create')}}>Create</a>
		<table class="table  table-striped">
			<thead>
				<tr>
					<th>Name</th>
					<th>Description</th>
					<th>Created At</th>
					<th>Updated At</th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<td>{{category.name}}</td>
						<td>{{category.description}}</td>
						<td>{{category.createdAt|date('d/m/Y')}}</td>
						<td>{{category.updatedAt|date('d/m/Y')}}</td>
						<td>
							<a class="btn btn-warning" href={{path('admin_category_update', {'id': category.id} )}}>Modify</a>
						</td>
						<td>
							<a class="btn btn-danger" href={{path('admin_category_delete', {'id': category.id} )}}>Delete</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</main>
{% endblock %}
